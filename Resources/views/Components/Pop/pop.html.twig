<div id="pop-container-{{ id }}" class="relative">
  {{ include("@AustralDesign/Components/Button/picto.html.twig",
    {
      picto:      picto,
      title:      title,
      data:       {
      "data-toast-container": "#pop-choices-"~id,
    }
    }
  )
  }}
  <div id="pop-choices-{{ id }}" class="toast-container toast-action" data-toast="" data-toast-position="{{ position }}" data-toast-position-origin="#pop-container-{{ id }}" >
    <ul class="list-link">
      {% for action in actions %}
        <li class="item">
          {{ include("@AustralDesign/Components/Button/picto.html.twig", action) }}
        </li>
      {% endfor %}
    </ul>
  </div>
</div>


