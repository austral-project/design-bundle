{
  class:        "string",
  picto:        "string",
  position:     "string",     #bottom-right || bottom-left || top-left || top-right,
  title:        "string",
  id:           "string",     #id-to-block
  actions:      [
    {
      tag:    "string",     # a or span,
      path:   "string",     # path,
      class:  "string",     # button-picto || button-action || button-link
